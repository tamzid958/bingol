@page "/account/manage"
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <p>
            From your account dashboard you can view your recent orders, manage your shipping and billing addresses, <br /> and edit your password and account details.
        </p>
        <p class="mt-3">Your account contains personal data that you have given us. This page allows you to modify, download or delete that data.</p>
    </div>
    <div class="container-fluid">
        <form id="personal-data-form" method="post">
            <div class="row">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" disabled />
                <p class="fst-italic">This will be how your name will be displayed in the account section and in reviews</p>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-warning mt-5">Save Changes</button>
        </form>
    </div>
    <div class="col-md-6 mt-4">
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="mt-1 d-flex justify-content-md-start">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group me-4">
                <button class="btn btn-warning" type="submit">Download</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}