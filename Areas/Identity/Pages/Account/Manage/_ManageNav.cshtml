@inject SignInManager<BingolUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column mt-3">
    <li class="nav-item">
        <a class="nav-link text-light @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <span class="fa fa-chart-line"></span>
            Dashboard
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @ManageNavPages.OrdersNavClass(ViewContext)" id="order" asp-page="./Orders">
            <span class="fa fa-archive"></span>
            Orders
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @ManageNavPages.AddressesNavClass(ViewContext)" id="addresses" asp-page="./Addresses">
            <span class="fa fa-address-book"></span>
            Addresses
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @ManageNavPages.WishlistNavClass(ViewContext)" id="wishlist" asp-page="./Wishlist">
            <span class="fa fa-heart"></span>
            Wishlist
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <span class="fa fa-user"></span>
            Account Details
        </a>
    </li>
</ul>
<hr class="text-white" />
<form class="d-grid" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
    <button type="submit" class="nav-link text-white text-start btn btn-danger">
        <span class="fas fa-sign-out-alt"></span>
        Sign out
    </button>
</form>

