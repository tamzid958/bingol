<div class="container">
    <div class="wrapper">
        <div class="row">
            <div class="col-md-8" style="margin:0 auto;">
                <div class="card text-center rounded-2">
                    <div class="card bg-dark text-white">
                        <div class="card-body">

                            <div class="header">
                                <h2>Register</h2>
                            </div>
                            <br />

                            <div>

                                <b>Name</b>
                                <input type="text" class="form-control" placeholder="Enter Name" name="name" required> <br />


                                <b>Username</b>
                                <input type="text" class="form-control" placeholder="Enter Username" name="uname" required> <br />


                                <b>Email</b>
                                <input type="email" class="form-control" id="emailInput" placeholder="jhon@xyz.com">  <br />


                                <b>Password</b>
                                <input type="password" class="form-control" id="inputPassword" required> <br />


                                <b>Mobile Number</b>
                                <input type="number" name="number" class="form-control" id="inputnumber"> <br />
                            </div>

                            <br><br>


                            <b> Address: </b>
                            &nbsp; <input type="text" class="form-control" name="address">


                            <br>
                            <button type="submit">Register</button><br />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>