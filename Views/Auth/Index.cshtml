                            </form>

                            <br>
                            <p>Don't have any account?</p>
                            <a asp-area="" asp-controller="Auth" asp-action="Register">Register now</a> <br />


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


