@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card text-start bg-dark bg-gradient text-light" style="width:30rem;">
        <div class="p-3 border-bottom">
            <h3 class="pacifico">Forgot Password</h3>
        </div>
        <div class="p-3 px-4 py-4 border-bottom">
            <p>Lost your password? Please enter your email address. You will receive a link to create a new password via email.</p>
            <label class="form-label mt-4">Email Address</label>
            <input type="email" class="form-control" placeholder="Email Address" />
            <div class="d-grid mt-4 col-12 mx-auto">
                <a class="btn btn-lg btn-block btn-warning">Reset Password</a>
            </div>
        </div>
    </div>
</div>
