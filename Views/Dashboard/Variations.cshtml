@model PaginatedList<Bingol.Models.Productoption>

@{
    ViewData["Title"] = "Variations";
}

<div class="container-fluid">
    <div class="row">
        <partial name="_PartialAdminNav.cshtml" />
        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4 profile-tab">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead class="bg-dark text-light">
                        <tr>
                            <th scope="col" class="text-center">Product</th>
                            <th scope="col" class="text-center">Option Group</th>
                            <th scope="col" class="text-center">Variation</th>
                            <th scope="col" class="text-center">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @("#" + obj.Product.ProductId + " " +  obj.Product.ProductName)
                                </td>
                                <td class="text-center">
                                    @obj.OptionGroup.OptionGroupName
                                </td>
                                <td class="text-center">
                                    @obj.Option.OptionName
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-danger" asp-action="DeleteVariation" asp-route-id="@obj.ProductOptionId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @{
                var prevDisabled = !Model.PreviousPage ? "disabled" : "";
                var nextDisabled = !Model.NextPage ? "disabled" : "";
            }
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mt-3">
                    <li class="page-item @prevDisabled">
                        <a class="page-link" asp-action="Variations" asp-route-page="@(Model.PageIndex-1)">Previous</a>
                    </li>
                    <li class="page-item text-dark @nextDisabled">
                        <a class="page-link" asp-action="Variations" asp-route-page="@(Model.PageIndex + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>