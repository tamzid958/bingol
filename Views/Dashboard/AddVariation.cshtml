@model Bingol.Models.Productoption

@{
    ViewData["Title"] = "Add Variation";
}

<div class="container-fluid">
    <div class="row">
        <partial name="_PartialAdminNav.cshtml" />
        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4 profile-tab">
            <form method="post" action="@Url.Action("OnPostAddNewVaritaion", "Dashboard")">
                <div class="form-group">
                    <label class="form-label">Product</label>
                    <select asp-for="ProductId" class="form-control custom-select" asp-items="ViewBag.Products" required style="width: 100%">
                        <option value="" selected disabled>Choose Product</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label class="form-label">Variation</label>
                    <select asp-for="OptionId" class="form-control custom-select" asp-items="ViewBag.Options" required style="width: 100%">
                        <option value="" selected disabled>Choose Variation</option>
                    </select>
                </div>
                <div class="d-grid mt-3">
                    <input type="submit" value="Create" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
