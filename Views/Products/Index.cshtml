@model System.Data.DataTable;
@{
    ViewData["Title"] = "PRODUCTS";
}

<!-- courselHero-->
<div id="carouselHero" class="carousel carousel-dark slide hidder" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselHero" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselHero" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselHero" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="~/images/beliaikin.jpg" class="d-block w-100" alt="beliaikin">

        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="~/images/fera.jpg" class="d-block w-100" alt="fera">
        </div>
        <div class="carousel-item">
            <img src="~/images/gabb-tapic.jpg" class="d-block w-100" alt="gabb-tapic">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselHero" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselHero" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>
<div class="container-fluid navbar-dark bg-dark flex-md-nowrap p-0 shadow">
    <button class="navbar-toggler bg-dark d-md-none collapsed d-grid text-start w-100 text-light" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <p class="m-2"><span class="fa fa-filter me-2"></span>Filters</p>
    </button>
</div>
<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 d-md-block sidebar collapse mt-3">
            <div class="position-sticky">
                <div class="card">
                    <div class="category-filter-div">
                        <a class="btn btn-outline-dark d-flex justify-content-between align-items-center fs-5" data-bs-toggle="collapse" href="#categories" role="button" aria-expanded="false" aria-controls="categories">
                            Categories
                            <span class="icon-control fa fa-chevron-down"></span>
                        </a>
                        <div class="collapse multi-collapse m-3 show" id="categories">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Electronics
                            </label>
                            <br />
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Watches
                            </label>
                            <br />
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Laptops
                            </label>
                            <br />
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Clothes
                            </label>
                            <br />
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Accessories
                            </label>
                        </div>
                    </div>
                    <div class="price-filter-div">
                        <a class="btn btn-outline-dark d-flex justify-content-between align-items-center fs-5" data-bs-toggle="collapse" href="#price" role="button" aria-expanded="false" aria-controls="price">
                            Price
                            <span class="icon-control fa fa-chevron-down"></span>
                        </a>

                        <div class="collapse multi-collapse mt-3 mb-3 show" id="price">
                            <div class="p-4">
                                <input type="range" class="form-range slider" min="0" max="1000" id="priceRange">
                            </div>
                            <div class="d-flex justify-content-between align-items-center ms-3 me-3">
                                <p>Min</p>
                                <p>Max</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <input class="form-control ms-3 me-3" type="number" placeholder="$0" aria-label="minprice">
                                <input class="form-control ms-3 me-3" type="number" placeholder="$1000" aria-label="maxprice">
                            </div>
                            <a class="btn btn-warning d-grid m-3">Apply Now</a>
                        </div>
                    </div>
                    <div class="size-fliter-div">
                        <a class="btn btn-outline-dark d-flex justify-content-between align-items-center fs-5" data-bs-toggle="collapse" href="#size" role="button" aria-expanded="false" aria-controls="size">
                            Size
                            <span class="icon-control fa fa-chevron-down"></span>
                        </a>
                        <div class="collapse multi-collapse m-3 show" id="size">
                            <input type="checkbox" class="btn-check" id="XS" autocomplete="off">
                            <label class="btn btn-outline-warning" for="XS">XS</label>
                            <input type="checkbox" class="btn-check" id="SM" autocomplete="off">
                            <label class="btn btn-outline-warning" for="SM">SM</label>
                            <input type="checkbox" class="btn-check" id="LG" autocomplete="off">
                            <label class="btn btn-outline-warning" for="LG">LG</label>
                            <input type="checkbox" class="btn-check" id="XXL" autocomplete="off">
                            <label class="btn btn-outline-warning" for="XXL">XXL</label>
                            <input type="checkbox" class="btn-check" id="XXXL" autocomplete="off">
                            <label class="btn btn-outline-warning" for="XXXL">XXXL</label>
                        </div>
                    </div>
                    <div class="rating-filter-div">
                        <a class="btn btn-outline-dark d-flex justify-content-between align-items-center fs-5" data-bs-toggle="collapse" href="#rating" role="button" aria-expanded="false" aria-controls="rating">
                            Rating
                            <span class="icon-control fa fa-chevron-down"></span>
                        </a>
                        <div class="collapse multi-collapse m-3 show" id="rating">
                            <input class="form-check-input" type="checkbox" value="Better">
                            <label class="form-check-label">Better</label>
                            <br />
                            <input class="form-check-input" type="checkbox" value="Best">
                            <label class="form-check-label">Best</label>
                            <br />
                            <input class="form-check-input" type="checkbox" value="Good">
                            <label class="form-check-label">Good</label>
                            <br />
                            <input class="form-check-input" type="checkbox" value="Not Good">
                            <label class="form-check-label">Not Good</label>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="col-md-9 mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5>Sorted by</h5>
                <select class="form-select w-25" aria-label="Sorting">
                    <option value="asce" selected>Ascending</option>
                    <option value="desc">Descending</option>
                </select>
            </div>
            <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-2 mt-3">
                @for (var i = 0; i < 12; i++)
                {
                    <div class="col">
                        <a class="text-decoration-none" asp-area="" asp-controller="Products" asp-action="Product">
                            <div class="card product-card">
                                <img src="~/images/fera.jpg" class="card-img card-img-top" alt="fera">
                                <div class="card-img-overlay">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <span class="bg-info bg-gradient badge fw-bold text-white">-25%</span>
                                        <span class="far fa-heart text-danger fa-2x text-decoration-none"></span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="text-decoration-none">Jack &amp; Jones Royal Streched Shirt</h5>
                                    <p class="card-text text-muted">Black, Yellow, Navy Blue</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="fw-bold text-decoration-none">$ 99.00</h5>
                                        <div class="btn btn-warning bg-gradient">Buy<span class="fa fa-shopping-bag ms-3"></span></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-center align-content-center align-items-md-center mt-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link bg-dark text-warning" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link bg-dark text-warning" href="#">1</a></li>
                        <li class="page-item"><a class="page-link bg-dark text-warning" href="#">2</a></li>
                        <li class="page-item"><a class="page-link bg-dark text-warning" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link bg-dark text-warning" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>