@{
    ViewData["Title"] = "PRODUCT";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <!-- courselHero-->
            <div id="carouselHero" class="carousel product-carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item product-carousel active">
                        <img src="~/images/beliaikin.jpg" class="d-block w-100" alt="beliaikin">

                    </div>
                    <div class="carousel-item product-carousel">
                        <img src="~/images/fera.jpg" class="d-block w-100" alt="fera">
                    </div>
                    <div class="carousel-item product-carousel">
                        <img src="~/images/gabb-tapic.jpg" class="d-block w-100" alt="gabb-tapic">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselHero" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselHero" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6 mt-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a class="text-muted" href="#">Products</a></li>
                    <li class="breadcrumb-item"><a class="text-muted" href="#">Dress</a></li>
                    <li class="breadcrumb-item active text-muted" aria-current="page">Jack &amp; Jones Royal Streched Shirt</li>
                </ol>
            </nav>
            <h3>Jack &amp; Jones Royal Streched Shirt</h3>
            <hr class="w-25" />
            <h4 class="fw-bold">$ 99.00</h4>
            <p class="text-success">In Stock</p>
            <div class="d-flex justify-content-around w-25">
                <input type="button" value="-" class="decreaseVal btn-outline-dark btn">
                <input type="number" min="1" max="22" value="20" class="val form-control text-center">
                <input type="button" value="+" class="increaseVal btn-outline-dark btn">
            </div>
            <label class="form-label mt-3">Choose an option</label>
            <select class="form-select w-25" aria-label="option">
                <option value="XS">XS</option>
                <option value="SM">SM</option>
                <option value="LG" selected>LG</option>
                <option value="XXL">XXL</option>
                <option value="XXXL">XXXL</option>
            </select>
            <button class="btn btn-warning text-white btn-lg w-25 mt-4">Buy<span class="fa fa-shopping-bag ms-3"></span></button>
            <button class="btn btn-danger text-white btn-lg w-25 mt-4">Wishlist <span class="fa fa-heart ms-3"></span></button>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5">
    <nav>
