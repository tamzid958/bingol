<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Bingol</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/Chart.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 class="pacifico">Bingol</h1>
                </a>
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <div class="form-inline hidder">
                        <div class="input-group search-div">
                            <input class="form-control searchbar" type="search" name="searching" placeholder="I'm Searching for" id="search-input">
                            <span class="input-group-append s-icon">
                                <button type="submit" class="text-dark bg-transparent border-0">
                                    <i class="fas fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                }
                <div class="d-inline-flex">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fas fa-user"></i>
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">
                        <i class="fas fa-boxes"></i>
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Cart">
                        <i class="fas fa-cart-plus"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Bingol - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.cookie.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/Chart.bundle.min.js"></script>
    <script src="~/lib/bootstrap/owl.carousel.min.js"></script>
    <script src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5f6a2229f290dcba"></script>
    <script src="https://cdn.tiny.cloud/1/e4f32vgxciwftxmzhe11ch7ruh2i0wyw6jrb0qh5v986h2xr/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <!-- <script src="//code.tidio.co/zszdwngu3sk3q92dnuoyaxikh8vmpwig.js" async></script> -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>